<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_activity_bg"
              android:orientation="vertical"
              tools:context="altabel.pervacio.test.testdoubletap.MainActivity">

    <TextView
        android:id="@+id/double_tap_status_tv"
        android:layout_alignParentTop="true"
        style="@style/DoubleTapTVStyle"/>

    <TextView
        android:id="@+id/double_tap_coordinates_tv"
        android:layout_below="@+id/double_tap_status_tv"
        style="@style/DoubleTapTVStyle"/>

    <TextView
        style="@style/DoubleTapTVStyle"
        android:visibility="visible"
        android:text="@string/double_tap_activity_hint"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/double_tap_on_view_tv"
        style="@style/DoubleTapTVStyle"
        android:layout_alignParentBottom="true"
        android:background="@color/particular_view_bg"
        android:text="@string/double_tap_particular_view_hint"
        android:visibility="visible"
        android:padding="20dp"/>

</RelativeLayout>
